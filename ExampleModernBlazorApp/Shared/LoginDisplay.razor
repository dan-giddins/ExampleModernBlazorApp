<AuthorizeView>
	<Authorized>
		<div class="d-flex flex-column h-100">
			<p class="mt-1 m-2 mb-auto text-center">
				@context.User.Claims.Single(x => x.Type =="name").Value
			</p>
			<a type="button"
			   class="ms-auto mt-auto m-2 btn btn-danger"
			   href="MicrosoftIdentity/Account/SignOut">
				<i class="bi bi-person me-1"></i>Sign out
			</a>
		</div>
	</Authorized>
	<NotAuthorized>
		<div class="d-flex flex-column h-100">
			<p class="mt-1 m-2 mb-auto text-center">
				Signed out
			</p>
			<a type="button"
			   class="ms-auto mt-auto m-2 btn btn-primary"
			   href="MicrosoftIdentity/Account/SignIn">
				<i class="bi bi-person me-1"></i>Sign in
			</a>
		</div>
	</NotAuthorized>
</AuthorizeView>
